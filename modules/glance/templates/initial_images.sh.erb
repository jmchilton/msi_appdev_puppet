#!/bin/bash

wget http://images.ansolabs.com/tty.tgz -O /tmp/tty.tgz
nova mkdir /tmp/images
nova tar -C /tmp/images -zxf /tmp/tty.tgz

glance add name="aki-tty" owner="admin" is_public="True" container_format=aki disk_format=aki -A <%= keystone_admin_token %> < /tmp/images/aki-tty/image
glance add name="ami-tty" owner="admin" is_public="True" container_format=ami disk_format=ami -A <%= keystone_admin_token %> < /tmp/images/ami-tty/image
glance add name="ari-tty" owner="admin" is_public="True" container_format=ari disk_format=ari -A <%= keystone_admin_token %> < /tmp/images/ari-tty/image
